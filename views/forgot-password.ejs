<%- include("partials/header", {title: "Forgot Password"}) %>

    <% if(failure) { %>
        <div class="alert alert-danger box" role="alert">
            <%= msg %>
        </div>
    <% } %>

    <form class="login-form forgot-password-form" action="/forgot-password" method="post">
        <h1>Reset password</h1>
        <div class="txtb">
            <input name="email" type="email" placeholder="Enter registered email id">
        </div>
        <button type="submit" class="btn btn-outline-light btn-lg btn-block forgot-password-btn">Send email</button>
        <p style="text-align: center;">OR   <a href="/login">Login?</a></p>
    </form>

<%- include("partials/footer") %>