<%- include("partials/header", {title: "Login"}) %>

    <% if(failure) { %>
        <div class="alert alert-danger" role="alert">
            <%= msg %>
        </div>
    <% } %>

    <form class="login-form" action="/login" method="post">
        <h1>Login</h1>
    
        <div class="txtb">
            <input name="username" type="text" placeholder="Username" id="username">
        </div>

        <div class="txtb">
        <input name="password" type="password" placeholder="Password" id="password">
        </div>

        <div class="show-password">
        <input type="checkbox" id="password-checkbox" name="password-checkbox" value="invisible">
        <label for="password-checkbox"> Show password</label><br>
        </div>

        <button type="submit" class="btn btn-outline-light btn-lg btn-block login-btn">Submit</button>

        <div class="bottom-txt">
            <p>Already have an account? <a href="/signup">Sign Up</a></p>
            <a href="/forgot-password">Forgot password?</a>
        </div>
    </form>

<%- include("partials/footer") %>